/* pages/home/home.wxss */
.view{
  box-sizing: border-box;
}
.pull-left{float: left!important;}
.pull-right{float: right!important;}
.clearfix{clear: both;overflow: hidden;}
.home-box{
  margin: 20rpx 0 0 0;
  padding: 0 0 0 30rpx;
}
.home-box-item{
  padding: 18rpx 0;
  border-bottom: 2rpx solid #d9d9d9;
}
.home-box-item image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 5rpx;
}
.info-box{
  margin: 0 0 0 20rpx;
}
.info-box text{
  display: block;
}
.info-box .name{
  margin-top: 5rpx;
  font-size: 32rpx;
}
.info-box .info{
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #9b9b9b;
}
.home-box-item .time{
  margin:10rpx 20rpx 0 0;
  font-size: 24rpx;
  color: #b2b2b2;
}
.show-btn {
  position: fixed;
  top: 50%;
  right: 20rpx;
  margin-top: -100rpx;
}
.show-btn image{
  width: 96rpx;
  height: 96rpx;
}
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  padding: 0 0 0 30rpx;
  width: 500rpx;
  height: 1140rpx;
  overflow: hidden;
  position: fixed;
  top: 0;
  right:0;
  z-index: 99999;
  background: #ffffff;
  overflow-y: scroll;
}
.modal-content {
  padding-bottom: 100rpx;
}
.modal-content .info-box{
  line-height: 97rpx;
}
.modal-content .info-box .name{
  margin: 0;
}