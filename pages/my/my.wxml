      <text class='pull-left'>学习设置</text>
      <image src='../../images/right_arrow01.png' class='pull-right'></image>
      <view class='pull-right picker'>{{pic_array[hx_index].name}}</view>
    </picker>
   <navigator url='../calendar/calendar' class='clearfix box-item'>
