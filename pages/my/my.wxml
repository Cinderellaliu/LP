      </view>
    </view>
  </view>
  <view class='my-content-box'>
    <navigator url='../method/method' class='clearfix box-item'>
      <image src='../../images/icon01.png' class='pull-left'></image>
      <text class='pull-left'>学习方法</text>
      <image src='../../images/right_arrow01.png' class='pull-right'></image>
    </navigator>
