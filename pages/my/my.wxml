<view class='main-content'>
  <view class='my-top'>
    <view class='clearfix info'>
      <image src='../../images/person_img.png' class='pull-left img01'></image>
      <text class='pull-left'>Lady Gaga</text>
      <image src='../../images/right_arrow.png' class='pull-right img02'></image>
