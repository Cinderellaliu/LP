      <text class='pull-left'>操作方式</text>
      <image src='../../images/right_arrow01.png' class='pull-right'></image>
    </navigator>
    <picker class='clearfix box-item' value="{{pic_array[hx_index].id}}" data-selecthx="{{pic_array[hx_index].name}}" range="{{pic_array}}" range-key="{{'name'}}"  bindchange="bindPickerChange_hx">
