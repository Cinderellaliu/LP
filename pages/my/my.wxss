/* pages/my/my.wxss */
page{
  background: #f5f5f5;
}
.view{
  box-sizing: border-box;
}
.pull-left{float: left!important;}
.pull-right{float: right!important;}
.clearfix{clear: both;overflow: hidden;}
.my-top{
  position: relative;
  padding: 30rpx 20rpx 0;
  height: 260rpx;
  background: #90241a;
}
.info {
  padding: 0 0 0 20rpx;
  height: 110rpx;
  line-height: 110rpx;
}
.info .img01{
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
}
.info text{
  margin-left: 20rpx;
  color: #fff;
  font-size: 32rpx;
}
.info .img02{
  margin: 45rpx 0 0 0;
  width: 13rpx;
  height: 23rpx;
}
.day-box{
  width: 100%;
  position: absolute;
  top: 220rpx;
  left: 0;
  padding:0 20rpx;
  box-sizing:border-box;
}
.day-box01{
  width: 100%;
  height: 140rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 5rpx; 
  background: #fff;
}
.day-box-item{
  width: 33%;
  text-align: center;
}
.day-box-item .name{
  display: block;
  font-size: 26rpx
}
.day-box-item span{
  margin-bottom: 10rpx;
  display: block;
  font-size: 22rpx;
}
.day-box-item span text{
  font-size: 34rpx;
  color: #90241a;
}
.my-content-box{
  padding-left: 30rpx;
  margin-top: 100rpx;
  background: #fff;
}
.my-content-box .box-item{
  height: 98rpx;
  line-height: 98rpx;
  border-bottom: 1px solid #d9d9d9;
}
.box-item image.pull-left{
  margin:32rpx 30rpx 0 0;
  width: 36rpx;
  height: 36rpx;
}
.box-item image.pull-right{
  margin:38rpx 20rpx 0 0;
  width: 13rpx;
  height: 23rpx;
}
.box-item text{
  font-size: 28rpx;
}
.my-content-box .no-border{
  border: 0;
}
.my-content-box01{
  margin: 20rpx 0 130rpx 0;
}
.picker{
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #999999;
}